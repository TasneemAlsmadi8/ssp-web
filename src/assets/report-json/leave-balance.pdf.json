{
  "fileName": "Leave Balance Report.pdf",
  "pageOptions": {
    "marginTop": 90,
    "marginBottom": 50,
    "marginLeft": 20,
    "marginRight": 20
  },
  "variables": {
    "title": "Leave Balance Report"
  },
  "templateFileName": "/assets/report-json/default.template.json",
  "elements": [
    {
      "type": "paragraph",
      "text": "To Date:  {{input.toDate | dd/MM/yyyy}}",
      "styles": {
        "font-size": 12,
        "font-weight": "bold",
        "margin-bottom": 5,
        "padding": 10,
        "border-bottom": 2
      }
    },
    {
      "type": "auto-table",
      "schema": {
        "S.N.": "{{serialNumber}}",
        "Employee Code": "{{row.employeeCode}}",
        "Employee Name": "{{row.fullName}}",
        "Leave Type": "{{row.leaveName}}",
        "Entitlement": "{{row.entitlement | 1.0}}",
        "Opening Balance": "{{row.openingBalance | 1.2}}",
        "Earned Leaves": "{{row.earnedLeaves | 1.2}}",
        "Taken Leaves": "{{row.takenLeaves | 1.2}}",
        "Encashed Leaves": "{{row.encashedDays | 1.2}}",
        "Leave Balance": "{{row.leaveBalance | 1.2}}",
        "Vacation Value": "{{row.paidVacationValue | 1.1-5}}"
      },
      "headersPlacement": "row",
      "cellStyles": {
        "align-content-horizontally": "center",
        "font": "Noto Sans",
        "font-size": 8,
        "background-color": "#dddddd",
        "border": 0
      },
      "headerStyles": {
        "align-content-horizontally": "center",
        "font-size": 8,
        "background-color": "#ffffff",
        "font-weight": "bold",
        "border": 0
      }
    }
  ]
}
