{
  "fileName": "Loan Balance Report.pdf",
  "pageOptions": {
    "marginTop": 100,
    "marginBottom": 50,
    "marginLeft": 20,
    "marginRight": 20
  },
  "variables": {
    "title": "Loan Balance Report"
  },
  "templateFileName": "/assets/report-json/default.template.json",
  "template": {
    "pageMargins": {
      "marginTop": 50
    }
  },
  "styles": {
    "font-size": 10
  },
  "elements": [
    {
      "type": "object-table",
      "data": {
        "Name of Employee:": "{{data.fullName}}",
        "Employee Code:": "{{data.employeeCode}}",
        "Department:": ""
      },
      "styles": {
        "padding": 5,
        "border-top": 1
      },

      "headersPlacement": "column",
      "cellStyles": {
        "font-weight": "bold",
        "border": 0,
        "padding": 3
      },
      "columnsRatio": [1, 4]
    },
    {
      "type": "h-container",
      "styles": {
        "padding": 5,
        "border-top": 1,
        "border-bottom": 1,
        "margin-left": 10,
        "margin-right": 10
      },
      "widths": ["50%", "50%"],
      "elements": [
        {
          "type": "object-table",
          "data": {
            "Transaction ID:": "{{data.multiTranID}}",
            "Transaction Type:": "{{data.loanName}}",
            "Total Amount:": "{{data.loanAmount:1.3}}"
          },
          "headersPlacement": "column",
          "cellStyles": {
            "border": 0,
            "padding": 3
          },
          "headerStyles": {
            "font-weight": "bold"
          }
        },
        {
          "type": "object-table",
          "data": {
            "Remarks:": "{{data.remarks}}",
            "": "",
            "Balance:": "{{data.loanBalance | number : 1.3}}"
          },
          "headersPlacement": "column",
          "cellStyles": {
            "border": 0
          },
          "headerStyles": {
            "font-weight": "bold"
          }
        }
      ]
    },
    {
      "type": "auto-table",
      "schema": {
        "Transaction Date": "{{row.transactionDate | date : dd/MM/yyyy}}",
        "Debit": "{{row.transactionValue : 1.3}}",
        "Credit": "0.000",
        "Batch No.": "{{row.batchNumber}}",
        "Value Transaction ID": "{{row.docEntry}}"
      },
      "columnsRatio": [1, 1, 1, 1, 1.5],
      "headersPlacement": "row",
      "styles": {
        "padding-left": 30,
        "padding-right": 30,
        "margin-left": 5,
        "margin-right": 5,
        "border-bottom": 1,
        "padding-bottom": 5
      },
      "cellStyles": {
        "align-content-horizontally": "center",
        "margin": 2,
        "border": 0
      },
      "headerStyles": {
        "align-content-horizontally": "center",
        "font-weight": "bold"
      }
    },
    {
      "type": "obj-table",
      "data": {
        "Transaction Date": "",
        "Debit": "{{data.loanAmount | number : 1.3}}",
        "Credit": "0.000",
        "Batch No.": "",
        "Value Transaction ID": ""
      },
      "hideHeaders": true,
      "columnsRatio": [1, 1, 1, 1, 1.5],
      "styles": {
        "padding-left": 35,
        "padding-right": 35,
        "margin-top": 5
      },
      "cellStyles": {
        "align-content-horizontally": "center",
        "border": 0
      }
    },
    {
      "type": "obj-table",
      "data": {
        "Transaction Date": "Total sum:",
        "Debit": "{{data.loanAmount | number : 1.3}}",
        "Credit": "0.000",
        "Batch No.": "",
        "Value Transaction ID": ""
      },
      "hideHeaders": true,
      "columnsRatio": [1, 1, 1, 1, 1.5],
      "styles": {
        "padding-left": 35,
        "padding-right": 35,
        "margin-top": 20,
        "padding-top": 5,
        "border-top": 3
      },
      "cellStyles": {
        "align-content-horizontally": "center",
        "border": 0,
        "font-weight": "bold"
      }
    }
  ]
}
