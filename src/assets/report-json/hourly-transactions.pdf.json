{
  "fileName": "Hourly Transactions Report.pdf",
  "pageOptions": {
    "marginTop": 110,
    "marginBottom": 50,
    "marginLeft": 20,
    "marginRight": 20,
    "pageOrientation": "landscape"
  },
  "variables": {
    "title": "Hourly Transactions Report"
  },
  "templateFileName": "/assets/report-json/default.template.json",
  "styles": {
    "font-size": 8
  },
  "elements": [
    {
      "type": "auto-table",
      "schema": {
        "Employee Code": "{{row.employeeCode}}",
        "Employee Name": "{{row.fullName}}",
        "Tran Code": "{{row.transactionCode}}",
        "Transaction": "{{row.transactionName}}",
        "From Date": "{{row.fromDate}}",
        "To Date": "{{row.toDate}}",
        "No of Hours": "{{row.numberOfHours}}",
        "O.T. Hours": "{{row.overtimeHours}}",
        "Salary Batch No.": "{{row.batchNumber}}",
        "Remarks": "{{row.remarks}}"
      },
      "headersPlacement": "row",
      "cellStyles": {
        "align-content-horizontally": "center",
        "font": "Noto Sans",
        "border": 0,
        "padding-top": 2,
        "padding-bottom": 2
      },
      "headerStyles": {
        "font-weight": "bold",
        "border-top": 1,
        "border-bottom": 1
      },
      "rowStyles": {
        "even": {
          "background-color": "#eeeeee"
        }
      }
    }
  ]
}
